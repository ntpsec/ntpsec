# Coverity is picky about the versions of gcc that it has support for, so
# please test this thoroughly before switching to a newer Debian distribution
FROM debian:stable-slim

RUN apt-get update
RUN apt-get install -y \
	bison \
	curl \
	gcc \
	git \
	libbsd-dev \
	libcap-dev \
	libssl-dev \
	netbase \
	pps-tools \
	python3-dev
