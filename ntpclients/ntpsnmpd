        return ax.Varbind(ax.VALUE_OCTET_STR, oid, "baz")

    def cb_statusNumRefSources(self, oid):  # DUMMY
        # range of uint32
        return ax.Varbind(ax.VALUE_GAUGE32, oid, 50)

    def cb_statusDispersion(self, oid):  # DUMMY
