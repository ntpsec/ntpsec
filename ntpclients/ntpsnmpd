        return ax.Varbind(ax.VALUE_TIME_TICKS, oid, 8)

    def cb_statusDateTime(self, oid):  # DUMMY
        # NtpDateTime
        return ax.Varbind(ax.VALUE_OCTET_STR, oid, "fred")

    def cb_statusLeapSecond(self, oid):  # DUMMY
