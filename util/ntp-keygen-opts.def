    descrip   = "output private password";
    doc = <<-  _EndOfDoc_
	Just some descriptive text.
	_EndOfDoc_;
};

flag = {
    name      = get-pvt-passwd;
    value     = q;
    ifdef     = OPENSSL;
    arg-type  = string;
    arg-name  = passwd;
    descrip   = "input private password";
    doc = <<-  _EndOfDoc_
	Just some descriptive text.
	_EndOfDoc_;
};

flag = {
    name      = sign-key;
    value     = S;
    arg-type  = string;
    arg-name  = sign;
    ifdef     = OPENSSL;
    descrip   = "generate sign key (RSA or DSA)";
    doc = <<-  _EndOfDoc_
	Just some descriptive text.
	_EndOfDoc_;
